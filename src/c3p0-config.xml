<?xml version="1.0" encoding="UTF-8"?>
<c3p0-config>
	<default-config>
		<property name="jdbcUrl">jdbc:mysql://localhost:3306/bookstore</property>
		<property name="driverClass">com.mysql.jdbc.Driver</property>
		<property name="user">dabai</property>
		<property name="password">123</property>
		<!-- 连接池在无空闲连接可用时一次性创建的信数据库连接数 -->
		<property name="acquireIncrement">3</property>
		<!-- 连接池初始化创建连接数量 -->
		<property name="initialPoolSize">3</property>
		<!-- 连接池拥有的最大连接数 -->
		<property name="maxPoolSize">15</property>
		<!-- 连接的最大空闲时。如果超过这个时间，某个数据库还没有被使用，则断开连接
			设置为0时，不会断开 -->
		<property name="maxIdleTime">0</property>
		<!-- 连接池的最小连接数，与maxIdleTimeExcessConnections配合使用减轻链接吹的负载 -->
		<property name="minPoolSize">3</property>
		<!-- 配置连接的生存时间。超过时间后自耦东丢弃。如若还在运行，则等待close后在关闭。配置为0时不受限制 -->
		<property name="maxConnectionAge">0</property>
		<!-- 选择丢弃一些连接减轻负担 ,配置为0时不予处理 -->
		<property name="maxIdleTimeExcessConnections">0</property>
		<property name="maxStatementsPerConnection">5</property>
		<property name="maxStatements">0</property>
		<property name="testConnectionOnCheckin">true</property>
		<property name="idleConnectionTestPeriod">18000</property>
	</default-config>
	<name-config name="mysql">
		<property name="jdbcurl">jdbc:mysql://localhost:3306/bookstore</property>
		<property name="driverClass">com.mysql.jdbc.Driver</property>
		<property name="user">dabai</property>
		<property name="password">123</property>
		<!-- 连接池在无空闲连接可用时一次性创建的信数据库连接数 -->
		<property name="acquireIncrement">3</property>
		<!-- 连接池初始化创建连接数量 -->
		<property name="initialPoolSize">3</property>
		<!-- 连接池拥有的最大连接数 -->
		<property name="maxPoolSize">15</property>
		<!-- 连接的最大空闲时。如果超过这个时间，某个数据库还没有被使用，则断开连接
			设置为0时，不会断开 -->
		<property name="maxIdleTime">0</property>
		<!-- 连接池的最小连接数，与maxIdleTimeExcessConnections配合使用减轻链接吹的负载 -->
		<property name="minPoolSize">3</property>
		<!-- 配置连接的生存时间。超过时间后自耦东丢弃。如若还在运行，则等待close后在关闭。配置为0时不受限制 -->
		<property name="maxConnectionAge">0</property>
		<!-- 选择丢弃一些连接减轻负担 ,配置为0时不予处理 -->
		<property name="maxIdleTimeExcessConnections">0</property>
		<property name="maxStatementsPerConnection">5</property>
		<property name="maxStatements">0</property>
		<property name="testConnectionOnCheckin">true</property>
		<property name="idleConnectionTestPeriod">18000</property>
	</name-config>
</c3p0-config>